@model MovieListModel
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        @foreach (var item in Model.Search)
        {
            <div class="card col-lg-3">
                <img class="card-img-top" height="300px" src="@item.Poster" alt="@item.Title">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Type | @item.Year</p>
                    <a asp-controller="Movies" asp-action="Details" asp-route-title="@item.Title" class="btn btn-primary">Ətraflı</a>
                </div>
            </div>
        }
    </div>
</div>



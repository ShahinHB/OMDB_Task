@model Movie
@{
    ViewData["Title"] = "Details";
}
<h3 class="text-center">@Model.Title</h3>
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <img src="@Model.Poster" />
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">imdb id</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Country</th>
                    <th scope="col">Director</th>
                    <th scope="col">Writer</th>
                    <th scope="col">Rated</th>
                    <th scope="col">Runtime</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">@Model.ImdbID</th>
                    <td>@Model.Genre</td>
                    <td>@Model.Country</td>
                    <td>@Model.Director</td>
                    <td>@Model.Writer</td>
                    <td>@Model.imdbRating</td>
                    <td>@Model.Runtime</td>
                </tr>
            </tbody>
        </table>

        <div class="col-lg-12 text-center">
            <b>Awards </b> : @Model.Awards
        </div>
    </div>
</div>
